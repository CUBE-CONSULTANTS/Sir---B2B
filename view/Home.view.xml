          <customData>
            <c:CustomData key="go" value="lista" writeToDom="false" />
          </customData>
        </GenericTile>
        <GenericTile header="Articoli" class="testClass sapUiTinyMarginTopBottom sapUiTinyMarginBegin" press=".goToItemsDetail">
