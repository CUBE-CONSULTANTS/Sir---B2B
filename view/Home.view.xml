<mvc:View
	controllerName="com.myorg.myUI5App.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Shell id="shellHome">
		<App id="app">
			<Page
				id="pageTiles"
				title=""
				showNavButton="true"
				navButtonPress=".goToLogin"
			>
				<HBox>
					<Image
						src="icon/logo.png"
						width="100%"
						height="100%"
					/>
				</HBox>
				<GenericTile
					header="Ordini"
					class="testClass sapUiTinyMarginTopBottom sapUiTinyMarginBegin"
					press=".goOrderDetail"
				>
					<TileContent>
						<ImageContent
							src="sap-icon://create"
							class="sapUiLargeMarginBegin"
						/>
					</TileContent>
					<customData>
						<c:CustomData
							key="go"
							value="lista"
							writeToDom="false"
						/>
					</customData>
				</GenericTile>
				<GenericTile
					header="Articoli"
					class="testClass sapUiTinyMarginTopBottom sapUiTinyMarginBegin"
					press=".goToItemsDetail"
				>
					<TileContent>
						<ImageContent
							src="sap-icon://suitcase"
							class="sapUiLargeMarginBegin"
						/>
					</TileContent>
					<customData>
						<c:CustomData
							key="go"
							value="lista"
							writeToDom="false"
						/>
					</customData>
				</GenericTile>
				<GenericTile
					header="Storico"
					class="testClass sapUiTinyMarginTopBottom sapUiTinyMarginBegin"
					press="goToHistorical"
				>
					<TileContent>
						<ImageContent
							src="sap-icon://activities"
							class="sapUiLargeMarginBegin"
						/>
					</TileContent>
					<customData>
						<c:CustomData
							key="go"
							value="lista"
							writeToDom="false"
						/>
					</customData>
				</GenericTile>
				<GenericTile
					header="Documenti"
					class="testClass sapUiTinyMarginTopBottom sapUiTinyMarginBegin"
					press="goToDocument"
				>
					<TileContent>
						<ImageContent
							src="sap-icon://documents"
							class="sapUiLargeMarginBegin"
						/>
					</TileContent>
					<customData>
						<c:CustomData
							key="go"
							value="lista"
							writeToDom="false"
						/>
					</customData>
				</GenericTile>
				<GenericTile
					header="Reportistica"
					class="testClass sapUiTinyMarginTopBottom sapUiTinyMarginBegin"
				>
					<TileContent>
						<ImageContent
							src="sap-icon://bar-chart"
							class="sapUiLargeMarginBegin"
						/>
					</TileContent>
					<customData>
						<c:CustomData
							key="go"
							value="lista"
							writeToDom="false"
						/>
					</customData>
				</GenericTile>
			</Page>
		</App>
	</Shell>
</mvc:View>