<mvc:View controllerName="com.myorg.myUI5App.controller.Home" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:c="sap.ui.core" displayBlock="true" height="100%" busyIndicatorDelay="0">
  <Shell id="shellHome">
    <App id="app">
      <Page id="pageTiles" title="" showNavButton="true" navButtonPress=".goToLogin">
