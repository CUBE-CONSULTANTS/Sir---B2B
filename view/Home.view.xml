<mvc:View
	controllerName="com.myorg.myUI5App.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<f:DynamicPage
		class="sapUiNoContentPadding"
	>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Image 
						width="55px"
						src="./public/img/logo-sirx2.png"
					/>
				</f:heading>
				<f:actions>
					<HBox alignItems="Center">
						<Button 
							text="Logout"
							class="sapUiTinyMarginEnd" 
							icon="sap-icon://log" 
							press=".onLogoutPress" 
						/>
					</HBox>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
		</f:header>
		<f:content>
			<FlexBox 
				width="auto"
				height="100%"
				direction="Column"
				justifyContent="Center"
				alignItems="Center"
			>
				<Image
					width="100px"
					src="icon/logo-sirx2.png"
					height="100%"
				/>
				<FlexBox
					width="auto"
					wrap="Wrap"
					justifyContent="Center"
					items="{
						path: 'home>/tiles',
						factory: '.factoryTiles'
					}"
				/>			
			</FlexBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>