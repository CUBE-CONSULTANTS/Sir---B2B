<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:f="sap.f"
>
	<Dialog
		title="Dettaglio RIGA"
		stretch="true"
	>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%"
		>
			<l:content>
				<Label
					text="Articolo"
					labelFor="filterDateRangeSelection"
					class="sapUiSmallMarginBegin"
				/>
				<Panel>
					<Input
						width="50%"
						class="sapUiLargeMarginEnd"
						id="articolo1"
						value="{/SelectedItems}"
					/>
					<Button
						text="Cerca"
						press="onOpenDialogFilterItems"
					/>
				</Panel>
			</l:content>
			<IconTabBar
				id="idIconTabBarMulti"
				class="sapUiResponsiveContentPadding"
				expanded="{/RicercaAvanzata}"
				headerMode="Inline"
			>
				<items>
					<IconTabFilter
						text="Ricerca avanzata"
						icon="sap-icon://search"
						design="Horizontal"
					>
						<VBox class="sapUiSmallMargin">
							<form:Form
								id="FormChange"
								editable="true"
							>
								<form:layout>
									<form:ResponsiveGridLayout
										labelSpanXL="4"
										labelSpanL="4"
										labelSpanM="12"
										labelSpanS="12"
										adjustLabelSpan="false"
										emptySpanXL="0"
										emptySpanL="0"
										emptySpanM="0"
										emptySpanS="0"
										columnsXL="2"
										columnsL="2"
										columnsM="2"
										singleContainerFullSize="false"
									/>
								</form:layout>
								<form:formContainers>
									<form:FormContainer title="">
										<form:formElements>
											<form:FormElement label="Codice">
												<form:fields>
													<Input value=""/>
												</form:fields>
											</form:FormElement>
											<form:FormElement label="Categoria">
												<form:fields>
													<Select
														id="category"
														selectedKey="{Country}"
													>
														<items>
															<core:Item
																text="ANTINCENDIO"
																key="ANTINCENDIO"
															/>
															<core:Item
																text="ANTIRUMORE"
																key="ANTIRUMORE"
															/>
															<core:Item
																text="ATTR. ELETTRICHE"
																key="ATTRELETTRICHE"
															/>
														</items>
													</Select>
												</form:fields>
											</form:FormElement>
											<form:FormElement>
												<form:fields>
													<HBox
														justifyContent="End"
														width="46%"
													>
														<CheckBox
															class="sapUiSmallMarginTop"
															text="Con Ordini"
														/>
													</HBox>
												</form:fields>
											</form:FormElement>
										</form:formElements>
									</form:FormContainer>
									<form:FormContainer>
										<form:formElements>
											<form:FormElement label="Descrizione">
												<form:fields>
													<Input value="{Url}"/>
												</form:fields>
											</form:FormElement>
											<form:FormElement label="Serie">
												<form:fields>
													<Select
														id="serie"
														selectedKey=""
													>
														<items>
														</items>
													</Select>
												</form:fields>
											</form:FormElement>
										</form:formElements>
									</form:FormContainer>
								</form:formContainers>
							</form:Form>
							<Button
								text="Cerca"
								class="sapUiSmallMarginBegin"
								press="onSearchDetailItems"
							/>
							<Table
								visible="false"
								id="idProductsTable"
								inset="false"
								class="sapUiMediumMarginTop"
								mode="MultiSelect"
							>
								<columns>
									<Column width="12em">
										<Text text="Codice"/>
									</Column>
									<Column
										minScreenWidth="Tablet"
										demandPopin="true"
									>
										<Text text="Descrizione"/>
									</Column>
									<Column
										minScreenWidth="Desktop"
										demandPopin="true"
										hAlign="End"
									>
										<Text text="Codice Precedente"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem vAlign="Middle">
										<cells>
											<Text text="FA1111"/>
											<Text text="MASCHERINA RIGIDA CON ELASTICI"/>
											<Text text="45101"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</l:VerticalLayout>
		<beginButton>
			<Button
				type="Accept"
				text="Salva"
			/>
		</beginButton>
		<endButton>
			<Button
				type="Reject"
				text="Annulla"
				press=".onCloseFilterOptionsDialogCancel"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>