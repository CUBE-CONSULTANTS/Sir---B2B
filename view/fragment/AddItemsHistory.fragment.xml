<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		title="Aggiungi articolo da storico"
		stretch="true"
	>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%"
		>
			<l:content>
				<Label
					text="Filtro per articolo"
					labelFor="filterDateRangeSelection"
					class="sapUiSmallMarginBegin"
				/>
				<Panel>
					<SearchField
						width="50%"
						search="onFilterInvoices"
					/>
				</Panel>
				<Panel>
					<Table
						id="tableHistory"
						rememberSelections="false"
						mode="SingleSelectLeft"
						items="{
							path: 'Clothing>/lastOrder'
						}"
					>
						<columns>
							<Column width="12em">
								<Text text="Articolo"/>
							</Column>
							<Column
								minScreenWidth="Tablet"
								demandPopin="true"
							>
								<Text text="Descrizione"/>
							</Column>
							<Column
								minScreenWidth="Desktop"
								demandPopin="true"
								hAlign="End"
							>
								<Text text="Q.TÃ "/>
							</Column>
							<Column
								minScreenWidth="Desktop"
								demandPopin="true"
								hAlign="Center"
							>
								<Text text="Prezzo"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle">
								<cells>
									<Text text="{Clothing>ID}"/>
									<Text text="{Clothing>description}"/>
									<Text text="{Clothing>quantity}"/>
									<VBox>
										<HBox justifyContent="SpaceBetween">
											<Label
												width="100%"
												text="{Clothing>list}"
											/>
											<Text
												text="{Clothing>listId}"
												width="5rem"
											/>
										</HBox>
										<HBox justifyContent="SpaceBetween">
											<Label text="{Clothing>sale}"/>
											<Text
												text="{Clothing>saleId}"
												width="5rem"
											/>
										</HBox>
										<HBox justifyContent="SpaceBetween">
											<Label text="{Clothing>priceSale}"/>
											<Text
												text="{Clothing>priceSaleId}"
												width="5rem"
											/>
										</HBox>
										<HBox justifyContent="SpaceBetween">
											<Label text="{Clothing>total}"/>
											<Text
												text="{Clothing>totalId}"
												width="5rem"
											/>
										</HBox>
									</VBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</Panel>
			</l:content>
		</l:VerticalLayout>
		<beginButton>
			<Button
				type="Accept"
				text="Salva"
				press="onAddHistoryItems"
			/>
		</beginButton>
		<endButton>
			<Button
				type="Reject"
				text="Annulla"
				press=".onCloseFilterOptionsDialogCancel"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>