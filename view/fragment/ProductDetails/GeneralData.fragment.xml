<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:card="sap.f.cards" 
  xmlns:f="sap.f" 
  xmlns:l="sap.ui.layout" 
>
  <VBox>
    <l:VerticalLayout id="containerLayout" width="100%">
        <l:BlockLayout id="BlockLayout" background="{/selectedBackground}">
          <l:BlockLayoutRow accentCells="Accent1">
              <l:BlockLayoutCell id="Accent1" width="2">
                <f:Card>
                    <f:layoutData>
                      <f:GridContainerItemLayoutData columns="4" />
                    </f:layoutData>
                    <f:header>
                      <card:Header iconSrc="sap-icon://product" title="{Clothing>/detail/titleProd}" />
                    </f:header>
                    <f:content>
                      <VBox height="115px" class="sapUiSmallMargin">
                          <VBox>
                            <Label text="{i18n>descr}" />
                            <Text text="{Clothing>/detail/textDescrizione}" />
                          </VBox>
                          <HBox justifyContent="SpaceBetween" class="sapUiMediumMarginTop">
                            <VBox class="sapUiMediumMarginEnd">
                                <Label text="{i18n>categ}" />
                                <Text text="{Clothing>/detail/categoriaText}" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>ser}" class="sapUiMediumMarginEnd" />
                                <Text text="{Clothing>/detail/textSerie}" />
                            </VBox>
                          </HBox>
                      </VBox>
                    </f:content>
                </f:Card>
              </l:BlockLayoutCell>
              <l:BlockLayoutCell id="Accent2" width="2">
                <f:Card>
                    <f:layoutData>
                      <f:GridContainerItemLayoutData columns="4" />
                    </f:layoutData>
                    <f:header>
                      <card:Header iconSrc="sap-icon://palette" />
                    </f:header>
                    <f:content>
                        <VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
                          <VBox>
                            <Label text="{i18n>colori}" />
                            <Text text="{Clothing>/detail/textColore}" />
                          </VBox>
                          <HBox justifyContent="SpaceBetween" class="sapUiMediumMarginTop">
                            <VBox class="sapUiMediumMarginEnd">
                                <HBox >
                                <Button text="{i18n>scegliColore}" id="colorSelected" icon="sap-icon://megamenu" tooltip="Seleziona un colore" press=".onOpenColor" />
                                <Text id="coloreFinale" class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiLargeMarginEnd" text="{/SelectedName}" />
                            </HBox>
                            </VBox>
                            <VBox class="sapUiLargeMarginBegin">
                                <Label text="{i18n>listino1}" class="sapUiMediumMarginEnd" />
                                <Text text="{Clothing>/detail/prezzoFissoModel} €" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>listino3}" />
                                <Text text="{Clothing>/detail/prezzoFissoModel3} €" />
                            </VBox>
                          </HBox>
                          <HBox justifyContent="SpaceBetween" class="sapUiMediumMarginTop">
                            <VBox>
                                <Label text="{i18n>gestitoWeb}" />
                                <Text text="Si" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>scontabile}" />
                                <Text text="Si" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>statoMateriale}" />
                                <Text text="" />
                            </VBox>
                          </HBox>
                      </VBox>
                      
                    </f:content>
                </f:Card>
              </l:BlockLayoutCell>
          </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>
    <l:VerticalLayout width="100%">
        <l:BlockLayout background="{/selectedBackground}">
          <l:BlockLayoutRow accentCells="Accent1">
              <l:BlockLayoutCell width="2">
                <f:Card>
                    <f:layoutData>
                      <f:GridContainerItemLayoutData columns="4" />
                    </f:layoutData>
                    <f:header>
                      <card:Header title="{i18n>altriDatiTitle}" iconSrc="sap-icon://bar-chart" press="onPress" />
                    </f:header>
                    <f:content>
                      <VBox height="258px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
                          <VBox justifyContent="SpaceBetween">
                            <Label text="{i18n>taglie}"/>
                            <Text text="{Clothing>/detail/textTaglie}" />
                          </VBox>
                          <HBox justifyContent="SpaceBetween" class="sapUiMediumMarginTop">
                            <VBox class="sapUiMediumMarginEnd">
                                <Label text="{i18n>gestitoDaAgente}" />
                                <Text text="Si" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>gestitoAMagazzino}" class="sapUiMediumMarginEnd" />
                                <Text text="Si" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>gestitoListino}" />
                                <Text text="Si" />
                            </VBox>
                          </HBox>
                          <HBox justifyContent="SpaceBetween" class="sapUiMediumMarginTop">
                            <VBox>
                                <Label text="{i18n>gestitoWeb}" />
                                <Text text="Si" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>scontabile}" />
                                <Text text="Si" />
                            </VBox>
                            <VBox>
                                <Label text="{i18n>statoMateriale}" />
                                <Text text="" />
                            </VBox>
                          </HBox>
                      </VBox>
                    </f:content>
                </f:Card>
              </l:BlockLayoutCell>
              <l:BlockLayoutCell width="2">
                <f:Card height="23rem" width="100%">
                    <f:layoutData>
                      <f:GridContainerItemLayoutData columns="4" />
                    </f:layoutData>
                    <f:header>
                      <card:Header title="{i18n>packConsegna}" iconSrc="sap-icon://shipping-status" press="onPress" />
                    </f:header>
                    <f:content>
                      <VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
                          <VBox justifyContent="SpaceBetween">
                            <Label text="{i18n>unitaMisura}" />
                            <Text text="NR" class="sapUiMediumMarginBottom" />
                          </VBox>
                          <VBox>
                            <Label text="{i18n>cartone}" />
                            <Text text="20" class="sapUiMediumMarginBottom" />
                          </VBox>
                          <VBox>
                            <Label text="{i18n>pacco}" />
                            <Text text="1" class="sapUiMediumMarginBottom" />
                          </VBox>
                          <VBox>
                            <Label text="{i18n>consegna}" />
                            <Text text="0" />
                          </VBox>
                      </VBox>
                    </f:content>
                </f:Card>
              </l:BlockLayoutCell>
          </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>
  </VBox>
</core:FragmentDefinition>